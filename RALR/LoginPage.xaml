<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RALR.LoginPage">

    <ScrollView>
        <AbsoluteLayout>
            <FlexLayout
                Direction="Column"
                Margin="10"
                JustifyContent="Center"
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                AbsoluteLayout.LayoutFlags="All">
                <Image />
                <Label Text="Server address:" Margin="0,10,0,0" />
                <Entry Placeholder="ralr.example.com" x:Name="serverAddress" Text="https://google.com/"/>
                <Label Text="Username:" Margin="0,10,0,0" />
                <Entry Placeholder="user" />
                <Label Text="Password:" Margin="0,10,0,0" />
                <Entry Placeholder="••••••••" IsPassword="True"/>
                <Button Margin="0,10,0,0" Text="Connect!" FontFamily="OpenSansSemibold" Clicked="Connect_Button_Clicked" />

            </FlexLayout>
            <Grid x:Name="LoadingShroud" Opacity="0.5" BackgroundColor="#000000" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" >
            </Grid>
            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="True" AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>
    </ScrollView>

</ContentPage>
